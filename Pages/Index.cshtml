@page
@model WebAppDiplomNew.Pages.IndexModel

<body>
    <div class="container">
        <div class="row mt-5 mx-auto">
            <div class="col-auto m-0 p-0 bg-light border">
                <div class="p-3">
                    <h2>Для старосты</h2><br />
                    <form  method="post">
                        <label>Username</label><br />
                        <input type="text" name="login" /><br />

                        <label>Password</label><br />
                        <input type="password" name="pass" /><br />

                        <div class="mt-4">
                            <label>@Model._MessageLog</label><br />
                            <input type="submit" value="Войти" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-auto m-0 p-0 bg-info border">
                <div class="p-3">
                    <h2>Для просмотра</h2><br />
                    <form method="get">
                        <label>Group</label><br />
                        <input type="text" name="group" /><br />

                        <div class="mt-4">
                            <label>@Model._MessageGroup</label><br />
                            <input type="submit" value="Просмотр" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>